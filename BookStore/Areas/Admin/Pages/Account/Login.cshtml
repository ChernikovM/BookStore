@page
@model BookStore.PresentationLayer.Areas.Admin.Pages.Account.LoginModel

<h1>Login page</h1>

<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="LoginUserModel.UserName"></label>
                    <input asp-for="LoginUserModel.UserName" class="form-control" />
                    <span asp-validation-for="LoginUserModel.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LoginUserModel.Password"></label>
                    <input asp-for="LoginUserModel.Password" class="form-control" />
                    <span asp-validation-for="LoginUserModel.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Sign In</button>
                </div>
            </form>
        </section>
    </div>
</div>