<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a  class="nav-link text-dark" asp-area="Admin" asp-page="/Account/Details" title="My Account Details">Manage</a>
        </li>
        <li class="nav-item">
            <form method="get" asp-page="/Account/Login">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    @if (!User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Admin" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>