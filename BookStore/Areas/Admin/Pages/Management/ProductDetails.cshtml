@page
@model BookStore.PresentationLayer.Areas.Admin.Pages.Management.ProductDetailsModel
@{
}

<div class="row">
    <div class="col-md-4">
        <div class="header">
            <h1>@Model.Title</h1>
        </div>
        @if (string.IsNullOrWhiteSpace(Model.Title))
        {
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        }
        @if (!string.IsNullOrWhiteSpace(Model.Title))
        {
            <hr>
            <form id="product" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                @if (!string.IsNullOrWhiteSpace(Model.SuccessMessage)) 
                {
                    <div class="text-success">@Model.SuccessMessage</div>
                }
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <textarea asp-for="Description" class="form-control" cols="50" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type">Type</label>
                    <select asp-for="Type" asp-items="Model.GetTypesList()"></select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Authors">Authors</label>
                    <input asp-for="Authors" class="form-control" />
                    <span asp-validation-for="Authors" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price">Price</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Currency">Currency</label>
                    <select asp-for="Currency" asp-items="Model.GetCurrencyTypes()"></select>
                    <span asp-validation-for="Currency" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
                <input type="hidden" asp-for="Id">
            </form>
        }
    </div>
</div>